<Window x:Class="Stock.Opens"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stock"
        mc:Ignorable="d"
        Title="OpenStock" Height="400" Width="400" ResizeMode="NoResize">
	<Grid>
		<ComboBox x:Name="OpenList"  Margin="15,35,0,0"  SelectionChanged="OpenList_SelectionChanged"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="249"/>
		<Button x:Name="Open" Content="Открыть" Click="Open_Click"  HorizontalAlignment="Left" Margin="282,35,0,0" VerticalAlignment="Top" Height="37" Width="93"/>
		<DataGrid x:Name="OpenTable" HorizontalAlignment="Center"   Width="370" Margin="0,91,0,10" AutoGenerateColumns="True"/>

	</Grid>
</Window>
